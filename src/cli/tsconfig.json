{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2015"],
        "types": ["node"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "../../bin"
    },
    "include": ["./"],
    "exclude": ["node_modules"]
}
